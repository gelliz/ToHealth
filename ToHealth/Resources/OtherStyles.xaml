    <Style x:Key="ButStyle00" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource grey01}"/>
        <Setter Property="Control.Foreground" Value="White" />
        <Setter Property="Control.FontSize" Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" 
        				BorderThickness="3"
        				Padding="4,2" 
        				BorderBrush="{StaticResource Biruza00}" 
        				CornerRadius="25" 
        				Background="#FF4F8591">
                        <Grid >
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" Name="content"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#92f442" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FFF0F0F0" />
                            <Setter Property="Foreground" Value="{StaticResource grey01}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

